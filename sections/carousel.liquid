{{ 'section.carousel.css' | asset_url | stylesheet_tag }}

<div ui-section="carousel" ui-nav="shop">
  <ul class="slides">
    {% for slide in (1..3) %}
      <li class="slide">
        <div class="image">
          <img
            src="https://shop-themes-assets.ycdn.store/store-images/2a3640c5-56d5-477a-aa71-36c0fdac4c20/slider-2-2lIFwqLvEHDlbGUWnvZRCknMrm8.jpg"
            alt="slide"
            height="100%"
            width="100%"
          >
          {% comment %} {% render 'misc.image-fallback' %} {% endcomment %}
        </div>
        <div class="content">
          <h3 class="heading">Your Audio Under Control</h3>
          <button ui-button data-variant="blurry" data-size="md">Shop Now</button>
        </div>
      </li>
    {% endfor %}
  </ul>
  <div class="pagination">
    {% for page in (1..3) %}
      <span class="page"></span>
    {% endfor %}
  </div>
</div>

{% schema %}
{
  "label": "Carousel"
}
{% endschema %}
