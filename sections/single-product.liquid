{{ 'section.single-product.css' | asset_url | stylesheet_tag }}

<div ui-section="single-product">
  <ui-drawer id="gallery">
    <div
      class="media"
      ui-drawer="trigger"
      data-for="gallery"
      data-state="open"
    >
      <ul class="slides">
        {% for item in (1..3) %}
          <li class="slide">
            <img
              src="https://cdn.youcan.shop/stores/28a34010e84b881fb087359c7e280a08/products/Y5zJcwYGY6SC189RXCpW99QVFnK0Jm05JgIwhDcP.webp"
              alt="product"
              height="100%"
              width="100%"
            >
          </li>
        {% endfor %}
      </ul>
      <div class="pagination"><span class="index">1</span> / <span class="total"></span>3</div>
    </div>
    {% render 'drawer.gallery' %}
  </ui-drawer>
  <div class="content">
    <div class="bio">
      <h1 class="title">Private bedroom in Manhattan Upper East Side</h1>
      <div class="reviews-overview">
        <div class="rating">
          <i class="hgi hgi-stroke hgi-star"></i>
          <span class="value">4.6</span>
        </div>
        <span class="separator">·</span>
        <span class="total">90 reviews</span>
      </div>
    </div>
    {% render 'misc.variants' %}
    <article class="description">
      Lorem ipsum dolor sit amet consectetur adipisicing elit. Minima modi temporibus rerum nobis incidunt
      necessitatibus, ex repellat veniam illum impedit at fugiat dolore tempore, corporis ipsum, magnam doloremque!
      Vitae, non.
    </article>
    <div class="reviews">
      <div class="reviews-overview">
        <div class="rating">
          <i class="hgi hgi-stroke hgi-star"></i>
          <span class="value">4.6</span>
        </div>
        <span class="separator">·</span>
        <span class="total">90 reviews</span>
      </div>
      <ul class="cards">
        {% for review in (1..5) %}
          <li class="card">
            <div class="rating">
              <div class="stars">
                {% for star in (1..5) %}
                  <i class="hgi hgi-stroke hgi-star"></i>
                {% endfor %}
              </div>
              <span class="separator">·</span>
              <span class="date">1 week ago</span>
            </div>
            <article>
              <p>
                We had a lovely stay in the cabin in the woods! The cabin was surrounded by gorgeous countryside and in
                a perfect location to see all the idyllic villages of the Cotswolds.
              </p>
            </article>
          </li>
        {% endfor %}
      </ul>
    </div>
    <div class="note">
      <i class="hgi hgi-stroke hgi-note"></i>
      <span class="value">The cabin was surrounded by gorgeous</span>
    </div>
    <div class="action">
      <span class="price">MAD 299</span>
      <button ui-button data-variant="primary" data-size="lg">
        <i class="hgi hgi-stroke hgi-shopping-cart-add-01"></i>
        <span class="label">Add to Cart</span>
      </button>
    </div>
  </div>
</div>

{% schema %}
{
  "label": "Single Product"
}
{% endschema %}
