{{ 'section.collections.css' | asset_url | stylesheet_tag }}
{{ 'drawer.products.css' | asset_url | stylesheet_tag }}

<div ui-section="collections" ui-nav="shop">
  <div class="head">
    <h3 class="title">Collections</h3>
    <a href="/collections" ui-button data-variant="link" data-size="sm" class="see-all"> See all</a>
  </div>
  <ul class="collections" data-style="grid">
    {% for item in (1..4) %}
      {% render 'block.collection' %}
    {% endfor %}
  </ul>
</div>

{% schema %}
{
  "label": "Collections",
  "templates": ["index"],
  "limit": 3,
  "max_blocks": 9
}
{% endschema %}
