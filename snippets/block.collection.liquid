{% comment %}
  Renders a collection card (Block)

  Usage:
  {% render 'block-collection'%}
{% endcomment %}

{% assign attributes = block.youcan_attributes %}
{% assign collection = block.settings.collection %}

<li class="collection">
  <a
    class="collection-card"
    href="/collections/{{ collection.slug }}"
    {{ attributes }}
  >
    <div class="image">
      {% if collection.preview_image %}
        <img
          srcset="
            {{ collection.preview_image.medium }} 480w,
            {{ collection.preview_image.large }} 800w,
            {{ collection.preview_image.original }} 1200w
          "
          sizes="
            (max-width: 640px) 50vw,
            (max-width: 768px) 33vw,
            (max-width: 1024px) 25vw,
            33vw
          "
          src="{{ collection.preview_image.original }}"
          alt="{{ collection.name }}"
          height="100%"
          width="100%"
        >
      {% else %}
        {% render 'misc.image-fallback' %}
      {% endif %}
    </div>
    <div class="content">
      <span class="name">{{ collection.name }}</span>
    </div>
  </a>
</li>
