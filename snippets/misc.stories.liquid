{% comment %}
  Renders stories

  Usage:
  {% render 'misc.stories'%}
{% endcomment %}

<div ui-stories="content" data-state="closed">
  <div class="head">
    <div class="steps">
      {% for step in (1..4) %}
        <span class="step"></span>
      {% endfor %}
    </div>
    <div class="more">
      <div class="info">
        <img
          src="https://images.pexels.com/photos/34046748/pexels-photo-34046748.jpeg"
          alt="logo"
          width="40"
          height="40"
          class="logo"
        >
        <span class="name">Cokimocha</span>
      </div>
      <button
        class="action"
        ui-stories="trigger"
        ui-button
        data-variant="ghost"
        data-size="md"
        data-icon
        aria-label="close"
      >
        <i class="hgi hgi-stroke hgi-cancel-01"></i>
      </button>
    </div>
  </div>
  <ul class="stories">
    <li
      class="story"
      style="background-image: url(https://images.pexels.com/photos/6946071/pexels-photo-6946071.jpeg);"
    >
      <div class="content">
        <h4 class="title">Hot coffee mug</h4>
        <span class="price">$25.00</span>
        <p class="description">
          Handcrafted ceramic mug with a two-tone glaze and natural speckle finish simple, warm, and perfect for
          everyday use.
        </p>
      </div>
      <div class="actions">
        <button ui-button data-variant="secondary" data-size="lg">Buy Now</button>
      </div>
    </li>
  </ul>
</div>
